name: Auto-Restart-RDP

on:
  schedule:
    - cron: "0 */6 * * *"  # tiap 6 jam
  workflow_dispatch:

jobs:
  trigger:
    runs-on: ubuntu-latest
    steps:
      - name: Trigger RDP Workflow
        run: |
          curl -X POST \
            -H "Accept: application/vnd.github+json" \
            -H "Authorization: Bearer ${{ secrets.GH_PAT }}" \
            https://api.github.com/repos/${{ github.repository }}/actions/workflows/RDP.yml/dispatches \
            -d '{"ref":"main"}'
